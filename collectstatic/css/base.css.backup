@import url(//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic);
@import url(//fonts.googleapis.com/css?family=Quicksand);

html,
body {
    overflow-x: hidden!important;
    font-family: 'Source Sans Pro', sans-serif;
    -webkit-font-smoothing: antialiased;
    width: 100%;
    min-height: 100%;
    background: #f3f3f3;
    color: #222222;
    font-size: 1.1em;
}

body > div.container {
    width: 100%;
    margin: 0;
    padding: 30px 0 0 0;
}

header,
.header {
    width: 100%;
    height: 110px;
    font-family: Quicksand, cursive, sans-serif;
    /*font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;*/
}

header .navbar {
    width: 100%;
    height: 100px;
    background-color: #444444;
    /*background-color: #367FA9;*/
}

.navbar .navbar-center.navbar-brand {
    width: 100%;
    height: 100%;
    padding: 0;
}

.navbar a.navbar-brand {
    display: block;
    width: 100%;
    height: 100px;
    font-size: 2.5em;
    line-height: 75px;
    text-align: center;
    vertical-align: middle;
    color: #cccccc;
}

.navbar .navbar-brand:hover {
    color: #e0e0e0;
}

.content {
    padding: 5px 15px;
}

hr {
    height: 2px;
    border-radius: 2px;
    background-color: #cccccc;
}

input[type=submit] {
    font-size: 1.2em;
}

div.form-extra {
    padding: 15px 10px 0 10px;
}

.bs-callout {
    background-color: #eaeaea;
    padding: 20px;
    margin: 20px 0;
    border: 1px solid #eee;
    border-left-width: 5px;
    border-radius: 3px;
}
.bs-callout h3 {
    margin-top: 0;
    margin-bottom: 5px;
}
.bs-callout p:last-child {
    margin-bottom: 0;
}
.bs-callout code {
    border-radius: 3px;
}
.bs-callout+.bs-callout {
    margin-top: -5px;
}
.bs-callout-default {
    border-left-color: #777;
}
.bs-callout-default h3 {
    color: #777;
}
.bs-callout-primary {
    border-left-color: #428bca;
}
.bs-callout-primary h3 {
    color: #428bca;
}
.bs-callout-success {
    border-left-color: #5cb85c;
}
.bs-callout-success h3 {
    color: #5cb85c;
}
.bs-callout-danger {
    border-left-color: #d9534f;
}
.bs-callout-danger h3 {
    color: #d9534f;
}
.bs-callout-warning {
    border-left-color: #f0ad4e;
}
.bs-callout-warning h3 {
    color: #f0ad4e;
}
.bs-callout-info {
    border-left-color: #5bc0de;
}
.bs-callout-info h3 {
    color: #5bc0de;
}

.btn-horizontal-padding {
    margin-top: 10px;
    font-size: 1.1em;
    padding: 7px 25px;
}